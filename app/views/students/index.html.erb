<p id="notice"><%= notice %></p>



<style>
	.maintable{width:50%; 		border-collapse:collapse; }
	.maintable th{background:#ddc524; padding:5px; border:black 1px solid;}
	.maintable td{padding:8px; border:black 1px solid;	}
 	.maintable tr:nth-child(odd){background: yellow;}
 	.maintable tr:nth-child(even){background: #ffd632;}
</style>

 
 
<h1>Student Collecting</h1>

<table class = "maintable">
  <thead >
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Color</th>
      <th>Gpa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.weight %></td>
        <td><%= student.height %></td>
        <td><%= student.color %></td>
        <td><%= student.gpa %></td>
        <td><%= link_to 'Detail', student %></td>
        <td><%= link_to 'Change', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Really Want to Delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add New Student', new_student_path %>

<br>
<% @students.each do |student| %>
 
    <svg style = "margin-top: 20px;"   width="<%= student.weight%>" height="<%= student.height*1.3%>">
      <rect  width="<%= student.weight %>" 
              height="<%= student.height*1.3%>" 
              style=" fill:white;stroke-width:1;stroke:black" />
      <text x="15"  y="20" style="fill:<%=student.color%>"><%= student.name %> </text>
      <text x="15" y="35" style="fill:black"><%= student.gpa %> </text>
  </svg>
  <% end %>
